@{
    ViewData["Title"] = "Service Provider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <section>
        <link href="~/css/Service Provider.css" rel="stylesheet" />
        <div class="back_img_banner">
            <nav class="navbar navbar-expand-lg  navbar-dark nav_bar">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/logo-small.png" class="main_logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ml-auto" style="align-items: center;">
                        <li class="nav-item book_now">
                            <a class="nav-link book_now_text" href="#"><span class="book_now_text">Book Now</span></a>
                        </li>
                        <li class="nav-item prices">
                            <a class="nav-link" asp-controller="Home" asp-action="Price"><span class="book_now_text">Prices & services</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="book_now_text other_btn">Warranty</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><span class="book_now_text other_btn">Blog</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact_Us"><span class="book_now_text other_btn">Contact Us</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link login" href="#"><span class="login_text">Login</span></a>
                        </li>
                        <li class="nav-item pri_ser">
                            <a class="nav-link" asp-controller="Home" asp-action="Service_Provider"><span class="login_text">Become a Helper</span></a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link text-white"><img src="~/img/ic-flag.png" style="margin-right:7px ;"><i class="fa fa-chevron-down" style="color: white;"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="for_ragister">
                <div class="ragister_form">
                    <h1 class="ragister_text">Ragister Now!</h1>
                    <form action="" class="form">
                        <input type="text" placeholder="First Name" class="for_input"><br>
                        <input type="text" placeholder="Last Name" class="for_input"><br>
                        <input type="email" name="" id="" placeholder="Email Address" class="for_input"><br>
                        <div style="display: flex;" class="for_phone">
                            <input type="text" value="+46" class="fixed_phone_val">
                            <input type="text" placeholder="Phone Number" class="for_input_phone"><br>
                        </div>
                        <input type="password" placeholder="Password" class="for_input" /><br>
                        <div style="display: flex;">
                            <input type="checkbox" name="" id="newsletter" class="for_cheakbox"><label for="newsletter" class="for_cheakbox_text">Send me newsletters from Helperland</label><br>
                        </div>
                        <div style="display: flex;">
                            <input type="checkbox" name="" id="term&con" class="for_cheakbox"><label for="term&con" class="for_cheakbox_text">I accept <span style="color: #1fb6ff;">terms and conditions</span>& <span style="color: #1fb6ff;">privacy policy</span></label><br>
                        </div>
                        <div class="for_main_robot">
                            <div class="for_robot">
                                <input type="checkbox" name="" id="robot" class="for_cheakbox"><label for="robot" class="for_cheakbox_text" style="font-weight: bold;">I'm Not a Robot</label><br>
                            </div>
                        </div>
                        <div style="text-align: center;">
                            <button class="for_form_btn">Get Started <i class="fa fa-long-arrow-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="for_arrow"><i class="fa fa-chevron-circle-down"></i></div>
        </div>
    </section>

    <!-- How its Work -->
    <section>
        <div class="main_for_work">
            <!-- background image -->
            <div class="back_img1"><img src="~/img/blog-left-bg.png" alt=""></div>
            <div class="back_img4"><img src="~/img/blog-right-bg.png" alt=""></div>

            <div class="sub_work">
                <div class="first_child_work">
                    <h2 class="first_child_text">How It Works</h2>
                </div>
                <div class="secound_child_work">
                    <div class="for_work_text">
                        <h3 class="work_text_head">Register Your Self </h3>
                        <p class="for_work_text_body">Provide Your Basic information To register <br> your self a services provider</p><br>
                        <p class="for_work_text_body">Read more<i class="fa fa-long-arrow-right" style="margin-left: 10px;"></i></p>
                    </div>
                    <div class="for_work_img">
                        <img src="~/img/group-28.png" alt="" class="work_img1">
                    </div>
                </div>

                <div class="secound_child_work">
                    <div class="for_work_img">
                        <img src="~/img/group-29.png" alt="" class="work_img1">
                    </div>
                    <div class="for_work_text2">
                        <h3 class="work_text_head">Get service requests</h3>
                        <p class="for_work_text_body">You will get service requests from <br>customes depend on service area and profile.</p><br>
                        <p class="for_work_text_body">Read more<i class="fa fa-long-arrow-right" style="margin-left: 10px;"></i></p>
                    </div>
                </div>

                <div class="secound_child_work">
                    <div class="for_work_text">
                        <h3 class="work_text_head">Complete service </h3>
                        <p class="for_work_text_body">Accept service requests from your <br> customersand complete your work.</p><br>
                        <p class="for_work_text_body">Read more<i class="fa fa-long-arrow-right" style="margin-left: 10px;"></i></p>
                    </div>
                    <div class="for_work_img">
                        <img src="~/img/group-30.png" alt="" class="work_img1">
                    </div>
                </div>
            </div>
            <!-- get our new seller -->
            <div class="sellr_main_div">
                <div style="text-align: center;">
                    <p class="seller_text">GET OUR NEWSLETTER</p>
                    <input type="email" placeholder="Your Email" class="for_email">
                    <input type="submit" class="for_submit">
                </div>
            </div>
        </div>
    </section>
</body>