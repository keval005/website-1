@inject SignInManager<AppUser> signmanager
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrp link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- for text -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- css file -->
    <link href="~/css/NavbarAndFooter.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg  navbar-dark nav_bar">
        <a asp-controller="Home" asp-action="Index"><img src="~/img/logo-small.png" class="main_logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ml-auto" style="align-items: center;">
                @if (signmanager.IsSignedIn(User))
                {
                    <li class="nav-item book_now">
                        <a class="nav-link book_now_text" asp-controller="Home" asp-action="Book_Now"><span class="book_now_text">Book Now</span></a>
                    </li>
                    <li class="nav-item prices">
                        <a class="nav-link" asp-controller="Home" asp-action="Price"><span class="book_now_text">Prices & services</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="book_now_text other_btn">Warranty</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="book_now_text other_btn">Blog</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact_Us"><span class="book_now_text other_btn">Contact Us</span></a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="Home" asp-action="Logout">
                            <button type="submit" class="nav-link login" style="width:auto;cursor:pointer;background-color:transparent">
                                <span class="login_text">LogOut @User.Identity.Name</span>
                            </button>
                        </form>
                    </li>
                    <li class="nav-item book_now">
                        <a class="nav-link" asp-controller="Home" asp-action="Service_Provider"><span class="login_text">Become a Helper</span></a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link text-white"><img src="./img/ic-flag.png" style="margin-right:7px ;"><i class="fa fa-chevron-down" style="color: white;"></i></a>
                    </li>
                }
                else
                {
                    <li class="nav-item book_now">
                        <a class="nav-link book_now_text" asp-controller="Home" asp-action="Book_Now"><span class="book_now_text">Book Now</span></a>
                    </li>
                    <li class="nav-item prices">
                        <a class="nav-link" asp-controller="Home" asp-action="Price"><span class="book_now_text">Prices & services</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="book_now_text other_btn">Warranty</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><span class="book_now_text other_btn">Blog</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact_Us"><span class="book_now_text other_btn">Contact Us</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link login" data-toggle="modal" data-target="#loginModal" href="#"><span class="login_text">Login</span></a>
                    </li>
                    <li class="nav-item prices" style="background-color: #29626d;">
                        <a class="nav-link" asp-controller="Home" asp-action="Service_Provider"><span class="login_text">Become a Helper</span></a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    @RenderBody()

    <!-- footer -->
    <div class="for_footer">
        <div class="perent_footer">
            <div class="first_child">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/logo-small.png" alt="" class="footer_logo"></a>
            </div>
            <div class="secound_child">
                <ul class="footer_ul">
                    <a asp-controller="Home" asp-action="Index" style="text-decoration: none;">
                    <li class="footer_nav">Home</li></a>
                    <a asp-controller="Home" asp-action="About" style="text-decoration: none;">
                    <li class="footer_nav">About</li></a>
                    <li class="footer_nav">TESTIMONIALS</li>
                    <a asp-controller="Home" asp-action="Faqs" style="text-decoration: none;">
                    <li class="footer_nav">FAQS</li></a>
                    <li class="footer_nav" style="text-align: center;">INSURANCE POLICY</li>
                    <li class="footer_nav">IMPRESSUM</li>
                </ul>
            </div>
            <div class="third_child">
                <i class="fa fa-facebook-square for_facebook"></i>
                <i class="fa fa-instagram for_insta"></i>
            </div>
        </div>
        <hr class="hr_4">
        <div class="term_con">
            <p>©2018 Helperland. All rights reserved.   Terms and Conditions | Privacy Policy</p>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>