@model UserRegistrationViewModel

@{
    ViewData["Title"] = "Become a Provider";
}

<!-- Register Now -->
<section class="register-now p-0" id="register-now">
    <div class="register-now-content">
        <div class="max-width-470">
            <form class="register-now-form" asp-controller="Account" asp-action="ServiceProviderRegistration">
                <h3>Register Now!</h3>
                <div class="alert alert-success alert-dismissible fade @( TempData["SuccessMessage"] == null ? "d-none" : "show")" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="form-input-text">
                    <input type="text" asp-for="FirstName" placeholder="First name" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-input-text">
                    <input type="text" asp-for="LastName" placeholder="Last name" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-input-text">
                    <input type="text" asp-for="Email" placeholder="Email Address" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-input-text">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">+46</span>
                        <input type="text" asp-for="MobileNumber" class="form-control" placeholder="Phone number" aria-label="Username"
                               aria-describedby="basic-addon1">
                    </div>
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-input-text">
                    <input type="password" asp-for="Password" placeholder="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-input-text">
                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="termsCondition">
                    <label class="form-check-label" for="termsCondition">
                        I accept <a href="#">terms and conditions</a> & <a href="#">privacy policy</a>
                    </label>
                </div>
                <div class="text-center submitBox">
                    <button type="submit">
                        Get Started<img src="~/img/become-a-pro/shape-2.svg" alt="">
                    </button>
                </div>
            </form>
            <div class="text-center">
                <a href="#how-it-works">
                    <img src="~/img/shape-1.svg" alt="down-arrow" class="down-arrow">
                </a>
            </div>
        </div>
    </div>
</section>

<!-- how-it-works -->
<section class="how-it-works pt-0 position-relative" id="how-it-works">
    <img src="~/img/become-a-pro/forma-1.svg" alt="" class="forma-1 backgroung-img position-absolute z-index-minus">
    <img src="~/img/become-a-pro/forma-2.svg" alt="" class="forma-2 backgroung-img position-absolute z-index-minus">
    <img src="~/img/become-a-pro/forma-3.svg" alt="" class="forma-3 backgroung-img position-absolute z-index-minus">
    <img src="~/img/become-a-pro/forma-4.svg" alt="" class="forma-4 backgroung-img position-absolute right-0 z-index-minus">
    <img src="~/img/become-a-pro/forma-5.svg" alt="" class="forma-5 backgroung-img position-absolute right-0 z-index-minus">
    <img src="~/img/become-a-pro/forma-6.svg" alt="" class="forma-6 backgroung-img position-absolute right-0 z-index-minus">
    <div class="max-width-788 pt-68">
        <h2 class="text-center mb-75">How it works</h2>
        <div class="registration-process">
            <div class="d-flex justify-content-between align-items-center registration-process-box">
                <div class="information">
                    <h3>Register yourself</h3>
                    <p>
                        Provide your basic information to register
                        yourself as a service provider.
                    </p>
                    <a href="#">Read more <img src="~/img/become-a-pro/shape-2-copy-3.svg" alt=""></a>
                </div>
                <img src="~/img/become-a-pro/group-18(1).png" alt="" class="registration-process-img">
            </div>
            <div class="d-flex justify-content-between align-items-center registration-process-box">
                <img src="~/img/become-a-pro/group-181.png" alt="" class="registration-process-img">
                <div class="information">
                    <h3>Get service requests</h3>
                    <p>
                        You will get service requests from
                        customes depend on service area and profile.
                    </p>
                    <a href="#">Read more <img src="~/img/become-a-pro/shape-2-copy-3.svg" alt=""></a>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center registration-process-box">
                <div class="information">
                    <h3>Complete service</h3>
                    <p>
                        Accept service requests from your customers
                        and complete your work.
                    </p>
                    <a href="#">Read more <img src="~/img/become-a-pro/shape-2-copy-3.svg" alt=""></a>
                </div>
                <img src="~/img/become-a-pro/group-18.png" alt="" class="registration-process-img">
            </div>
        </div>
    </div>
</section>

